{
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "ESNext",
      "dom"
    ],
    "paths": {
      "@firebase/auth": ["./node_modules/@firebase/auth/dist/index.rn.d.ts"]
    },
    "outDir": "lib",
    "removeComments": true,
    "target": "ES6",
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "/",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./**/*.tsx"
, "src/comps/RoundedHomeButton", "tests/authTests/login.test.ts"  ],
  "exclude": [
    "node_modules/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
